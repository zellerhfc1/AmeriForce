@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    body {
        padding-top: 0px;
    }
</style>

<link href="~/Content/HomeStyleSheet.css" rel="stylesheet" />

<link rel="stylesheet" type="text/css" href="https://cdn3.devexpress.com/jslib/21.2.7/css/dx.common.css" />
<link href="~/Content/DevExpressSchedulerStyle.css" rel="stylesheet" />
@*<link rel="stylesheet" type="text/css" href="https://cdn3.devexpress.com/jslib/21.2.7/css/dx.light.css" />*@
@*<script src="https://cdn3.devexpress.com/jslib/21.2.7/js/dx.all.js"></script>*@



<div class="demo-container" style="background-color:#fff;border:1px solid black;">
    <div class="container">
        <div class="row contactHeader">
            <div class="col-lg-5" align="left">
                <div style="border:0px solid black;">
                    <table align="left">
                        <tr>
                            <td valign="middle" style="border:1px solid #fff;padding:10px;">
                                <i class="fa fa-unlock" style="font-size:40px;"></i>
                            </td>
                            <td class="leftTextAlign" style="border:1px solid #fff;padding:10px;">
                                <span class="overviewHeader dealAmount">
                                    Change Password
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="col-lg-6" align="left">
            </div>
            <div class="col-lg-1" align="center">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 dividerTableBackground" style="height:3px;">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 workingSectionSubHeaderBackground">
                <h2 class="subHeadingTitle"></h2>
            </div>
        </div>

        @*
            <h4>@ViewData["Title"]</h4>
            <partial name="_StatusMessage" model="Model.StatusMessage" />*@



        @*<h4>@ViewData["Title"]</h4>
            <partial name="_StatusMessage" for="StatusMessage" />*@
        <div class="row">
            <div class="col-md-6">
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.OldPassword"></label>
                        <input asp-for="Input.OldPassword" class="form-control" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.NewPassword"></label>
                        <input asp-for="Input.NewPassword" class="form-control" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Update password</button>
                    <br><br />
                </form>
            </div>
        </div>


    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
        }
