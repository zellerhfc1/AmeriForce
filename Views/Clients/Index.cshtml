@model IEnumerable<AmeriForce.Data.Client>

@{
    ViewData["Title"] = "Index";
}

<link href="~/Content/ClientStyleSheet.css" rel="stylesheet" />


<nav aria-label="breadcrumb" align="right">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Clients" , new { id=999 })">Clients</a></li>
        <li class="breadcrumb-item active" aria-current="page"></li>
    </ol>
</nav>

<div style="border:0px solid #333;">
    @*<div class="container">
            <div class="row" align="right">
                <div class="col-lg-12">
                    <a class="btn btn-primary btn-md tinyButton" href="@Url.Action("TestCreateContact", "Test")" style="padding:5px;margin:10px;">Create New Contact</a>
                </div>
            </div>
        </div>*@
    <div class="container mainPageBody" style="border:1px solid #333;background-color:#fff;">

        @*Contact Detail Div*@
        <div class="row contactHeader">
            <div class="col-lg-5" align="left">
                <div style="border:0px solid black;">
                    <table align="left">
                        <tr>
                            <td valign="middle" style="border:1px solid #fff;padding:10px;">
                                <i class="fa fa-file-signature" style="font-size:80px;"></i>
                            </td>
                            <td class="leftTextAlign" style="border:1px solid #fff;padding:10px;">
                                <span class="overviewHeader dealAmount">
                                    Clients
                                </span>
                                <br />
                                <span class="nameSubHeader gradeAReversed"> @ViewBag.SubTitle (@ViewBag.ClientCount)</span>
                                <br />
                                <span class="nameSubHeaderNextCall"> @ViewBag.TimeStamp</span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="col-lg-3 dealAmount" align="center">
                &nbsp;
            </div>
            <div class="col-lg-3" align="center">
                &nbsp;
            </div>
            <div class="col-lg-1" align="center">
                @*<table>
                    <tr>
                        <td>
                            <img src="~/Images/lorisquare.png" class="img-thumbnail img-circle" style="height:70px;" />
                            <br />
                            <b>Lori Lemuel</b>
                        </td>
                    </tr>
                </table>*@
            </div>

        </div>

        <div class="row">
            <div class="col-lg-12 dividerTableBackground" style="height:3px;">
                &nbsp;
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12" style="padding:10px;background-color:#eee;" align="center">
                <a href='@Url.Action("Index", "Clients", new { id = 999 })' class="btn btn-sm btn-primary">All Clients In Pipeline</a>
                <a href='@Url.Action("Index", "Clients", new { id = 3 })' class="btn btn-sm btn-primary">All New Clients</a>
                <a href='@Url.Action("Index", "Clients", new { id = 1 })' class="btn btn-sm btn-primary">My Clients In Pipeline</a>
                <a href='@Url.Action("Index", "Clients", new { id = 2 })' class="btn btn-sm btn-primary">My Clients (All)</a>
            </div>
        </div>


<div class="row">
    <div class="col-lg-12" style="padding:10px;" align="left">
        <div class="container">


            <p>
                <a href='@Url.Action("Create", "Clients")' class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> Create Client</a>

            </p>
            <p align="right">
                            Search: <input type="text" name="clientSearch" class="searchTextbox" placeholder="Search Clients..." />
                        </p>
           <table class="table table-condensed table-hover table-bordered searchTable" style="width:100%;">
                            <tr class="darkTableHeading">
                    <th style="width:25px;">
                        @Html.DisplayName("Owner")
                    </th>
                    <th align="left" >
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayName("Company")
                    </th>
                    <th>
                        @Html.DisplayName("Current Stage")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayName("Close Date")
                    </th>
                    <th>
                        @Html.DisplayName("Actions")
                    </th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td class="leftTextAlign">
                            @*@Html.DisplayFor(modelItem => item.OwnerId)*@
                            <img src="~/Images/@(item.OwnerId).jpg" class="img-thumbnail" style="height:45px;" />
                        </td>
                        <td class="leftTextAlign">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="leftTextAlign">
                            @Html.DisplayFor(modelItem => item.CompanyId)
                        </td>
                        <td class="leftTextAlign">
                            @Html.DisplayFor(modelItem => item.StageName)
                        </td>
                        <td class="leftTextAlign">
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td class="leftTextAlign">
                            @Html.DisplayFor(modelItem => item.CloseDate)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary" style="padding:0px 5px 0px 5px;font-size:12px;">View</a> 
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" style="padding:0px 5px 0px 5px;font-size:12px;">Edit</a> 
                            @*<a href='@Url.Action("Details", "Clients", new { id=item.Id })' class="btn btn-xs btn-primary">View</a>
                            <a href='@Url.Action("Edit", "Clients", new { id=item.Id })' class="btn btn-xs btn-primary">Edit</a>*@
                        </td>
                    </tr>
                }

            </table>


        </div>
</div>
</div>
</div>



@section Scripts {
        @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

        <script src="~/jQuery/jQuery_TableSearch.js"></script>
        }
    