<link href="~/Content/ContactStyleSheet.css" rel="stylesheet" />

<div style="border:1px solid #333;background-color:#fff;">


    <div class="container mainPageBody">
        <div class="row contactHeader">

            <div class="col-lg-4" align="left">
                <div style="border:0px solid black;">
                    <table align="left">
                        <tr>
                            <td class="leftTextAlign" style="border:1px solid #fff;padding:10px;">
                                <span class="overviewHeader dealAmount">
                                    <i class="fa fa-upload"></i> Add Files
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-lg-4 dealAmount" align="center">
                &nbsp;
            </div>
            <div class="col-lg-3" align="center">
                &nbsp;
            </div>
            <div class="col-lg-1" align="center">
                &nbsp;
            </div>
        </div>


        

        <div class="row">
            <div class="col-lg-12 dividerTableBackground" style="height:3px;">
                &nbsp;
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 workingSectionSubHeaderBackground">
                <h2 class="subHeadingTitle">Select a File to Upload:</h2>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-12" style="padding:0px;">

                @{
                    if (ViewBag.Success != null)
                    {
                        if (ViewBag.Success == "Success")
                        {
                            <div class="alert alert-success" role="alert">
                                @Html.Raw("Your file, <b>" + ViewBag.Message + "</b>, has been uploaded successfully!")
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger" role="alert">
                                @Html.Raw("Your file, <b>" + ViewBag.Message + "</b>, has NOT BEEN uploaded!")
                            </div>
                        }
                    }
                }

            </div>

        </div>



    </div>
</div>
