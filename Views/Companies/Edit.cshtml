@model AmeriForce.Models.Companies.CompanyEditViewModel

@{
    ViewData["Title"] = "Edit";
}


<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<link href="~/Content/ContactStyleSheet.css" rel="stylesheet" />

<nav aria-label="breadcrumb" align="right">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Companies" , new { id=999 })">Companies</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Company</li>
        <li class="breadcrumb-item active" aria-current="page">@Model.companyVM.Name</li>
    </ol>
</nav>

<div style="border:0px solid #333;">
    <div class="container mainPageBody" style="border:1px solid #333;background-color:#fff;">

        @*Contact Detail Div*@
        <div class="row contactHeader">
            <div class="col-lg-5" align="left">
                <div style="border:0px solid black;">
                    <table align="left">
                        <tr>
                            <td valign="middle" style="border:1px solid #fff;padding:10px;">
                                <i class="fa fa-building" style="font-size:28px;"></i>
                            </td>
                            <td class="leftTextAlign" style="border:1px solid #fff;padding:0px;">
                                <span class="overviewHeader dealAmount">
                                    Edit - @Model.companyVM.Name
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="col-lg-6" align="left">
                @*Use this screen to edit a Company.*@
            </div>
            <div class="col-lg-1" align="center">
                &nbsp;
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 dividerTableBackground" style="height:3px;">
                &nbsp;
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12" style="padding:10px;background-color:#eee;" align="center">
                <a href='@Url.Action("Index", "Companies", new { id = 999 })' class="btn btn-sm btn-primary"> <i class="far fa-arrow-alt-circle-left"></i> Back To Company List</a>
            </div>
        </div>

        
        <form asp-action="Edit" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="companyVM.ID" />
            <div class="row">
                <div class="col-lg-12" style="padding:10px;" align="left">
                    <div class="container">
                        
                        <div class="row">
                            <div class="col-lg-12 dividerTableBackground" style="height:3px;">
                                &nbsp;
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 workingSectionSubHeaderBackground">
                                <h2 class="subHeadingTitle">Company Information</h2>
                            </div>
                            <div class="col-lg-6 workingSectionSubHeaderBackground">
                                <h2 class="subHeadingTitle">Mailing Information</h2>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6" style="padding:5px;" align="left">
                                
                                <div class="input-group input-group-sm mb-3 inputGroup-margin-top">
                                    <div class="input-group-prepend">
                                        <label asp-for="companyVM.Name" class="input-group-text"></label>
                                    </div>
                                    <input asp-for="companyVM.Name" class="form-control" />
                                    @*<span asp-validation-for="companyVM.Name" class="text-danger"></span>*@
                                </div>

                                <div class="input-group input-group-sm mb-3 inputGroup-margin">
                                    <div class="input-group-prepend">
                                        <label asp-for="companyVM.Description" class="input-group-text"></label>
                                    </div>
                                    <input asp-for="companyVM.Description" class="form-control" />
                                    @*<span asp-validation-for="companyVM.Name" class="text-danger"></span>*@
                                </div>

                                <div class="input-group input-group-sm mb-3 inputGroup-margin">
                                    <div class="input-group-prepend">
                                        <label asp-for="companyVM.CharterState" class="input-group-text"></label>
                                    </div>
                                    <select asp-items="@(new SelectList(Model.StateList, "Value", "Text"))" asp-for="companyVM.CharterState" class="form-control"></select>
                                    @*<span asp-validation-for="companyVM.Name" class="text-danger"></span>*@
                                </div>

                                <div class="input-group input-group-sm mb-3 inputGroup-margin">
                                    <div class="input-group-prepend">
                                        <label asp-for="companyVM.SICCode" class="input-group-text"></label>
                                    </div>
                                    <select asp-items="@(new SelectList(Model.SICCodesList, "Value", "Text"))" asp-for="companyVM.SICCode" class="form-control"></select>
                                    @*<span asp-validation-for="companyVM.Name" class="text-danger"></span>*@
                                    <input asp-for="companyVM.SICCodeManual" placeholder="SIC Code not in list" class="form-control" />
                                </div>
                            </div>

                            <div class="col-lg-6" style="padding:5px;" align="left">
                                
                                <div class="input-group input-group-sm mb-3 inputGroup-margin">
                                    <div class="input-group-prepend">
                                        <label asp-for="companyVM.MailingAddress" class="input-group-text"></label>
                                    </div>
                                    <input asp-for="companyVM.MailingAddress" class="form-control" />
                                    @*<span asp-validation-for="companyVM.Name" class="text-danger"></span>*@
                                </div>
                                <div class="input-group input-group-sm mb-3 inputGroup-margin">
                                    <div class="input-group-prepend">
                                        <label asp-for="companyVM.MailingCity" class="input-group-text"></label>
                                    </div>
                                    <input asp-for="companyVM.MailingCity" class="form-control" />
                                    @*<span asp-validation-for="companyVM.Name" class="text-danger"></span>*@
                                </div>
                                <div class="input-group input-group-sm mb-3 inputGroup-margin">
                                    <div class="input-group-prepend">
                                        <label asp-for="companyVM.MailingState" class="input-group-text"></label>
                                    </div>
                                    <select asp-items="@(new SelectList(Model.StateList, "Value", "Text"))" asp-for="companyVM.MailingState" class="form-control"></select>
                                    @*<span asp-validation-for="companyVM.Name" class="text-danger"></span>*@
                                </div>
                                <div class="input-group input-group-sm mb-3 inputGroup-margin">
                                    <div class="input-group-prepend">
                                        <label asp-for="companyVM.MailingPostalCode" class="input-group-text"></label>
                                    </div>
                                    <input asp-for="companyVM.MailingPostalCode" class="form-control" />
                                    @*<span asp-validation-for="companyVM.Name" class="text-danger"></span>*@
                                </div>
                            </div>
                            
                            <div class="col-lg-12" style="padding:5px;" align="left">
                                <div class="input-group-sm">
                                    <input type="submit" value="Edit" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>




    </div>
</div>

@section Scripts {
        @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        }
